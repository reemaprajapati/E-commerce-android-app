<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context="com.example.otimus.ecommerceapp.activities.CartActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            >

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/bag"
                        android:scaleType="centerInside"
                        android:id="@+id/iv_imageIcon" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/backpack"
                        android:layout_below="@+id/tv_productPrice"
                        android:layout_alignLeft="@+id/tv_productPrice"
                        android:layout_alignStart="@+id/tv_productPrice"
                        android:id="@+id/tv_productName" />

                    <TextView
                        android:textColor="@color/lightBlack"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:id="@+id/tv_productPrice"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_imageIcon"
                        android:layout_toEndOf="@+id/iv_imageIcon" />

                    <TextView
                        android:layout_centerInParent="true"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/colorBlack"
                        android:layout_below="@+id/tv_productName"
                        android:layout_toLeftOf="@+id/up_image"
                        android:layout_toStartOf="@+id/up_image" />

                    <ImageView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/up_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/up"
                        android:layout_alignTop="@+id/tv_productName"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="40dp"
                        android:layout_marginEnd="40dp" />
                    <ImageView
                        android:id="@+id/down_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/down"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/up_image"
                        android:layout_alignStart="@+id/up_image" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/yellowtshirt"
                        android:scaleType="centerInside"
                        android:id="@+id/imageView1" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yellowshirt"
                        android:layout_below="@+id/textView1"
                        android:layout_alignLeft="@+id/textView1"
                        android:layout_alignStart="@+id/textView1"
                        android:id="@+id/textView4" />

                    <TextView
                        android:textColor="@color/lightBlack"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs.1000/-"
                        android:id="@+id/textView1"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView1"
                        android:layout_toEndOf="@+id/imageView1" />
                    <ImageView
                        android:id="@+id/up_image1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/up"
                        android:layout_marginRight="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_alignTop="@+id/textView4"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    <ImageView
                        android:id="@+id/down_image1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/down"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/up_image1"
                        android:layout_alignStart="@+id/up_image1" />
                    <ImageView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/up_image2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/up"
                        android:layout_alignTop="@+id/textView4"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="40dp"
                        android:layout_marginEnd="40dp" />
                    <ImageView
                        android:id="@+id/down_image2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/down"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/up_image2"
                        android:layout_alignStart="@+id/up_image2" />

                    <TextView
                        android:layout_centerInParent="true"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/textView6"
                        android:layout_below="@+id/textView4"
                        android:layout_toLeftOf="@+id/up_image1"
                        android:layout_toStartOf="@+id/up_image1" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/hppendrive"
                        android:scaleType="centerInside"
                        android:id="@+id/imageView2" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hp pendrive"
                        android:layout_below="@+id/textView2"
                        android:layout_alignLeft="@+id/textView2"
                        android:layout_alignStart="@+id/textView2"
                        android:id="@+id/textView5" />

                    <TextView
                        android:textColor="@color/lightBlack"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs.1500/-"
                        android:id="@+id/textView2"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2" />
                    <ImageView
                        android:id="@+id/up_image3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/up"
                        android:layout_marginRight="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_alignTop="@+id/textView5"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    <ImageView
                        android:id="@+id/down_image3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/down"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/up_image3"
                        android:layout_alignStart="@+id/up_image3" />

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/textView7"
                        android:layout_below="@+id/textView5"
                        android:layout_toLeftOf="@+id/up_image3"
                        android:layout_toStartOf="@+id/up_image3" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOTAL Rs. 4500/-"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="16sp"

                />
            <Button
                android:id="@+id/btn_proceed"
                android:elevation="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Proceed to checkout"
                android:textColor="@color/colorWhite"
                android:background="@color/lightBlack"
                />



        </LinearLayout>
</ScrollView>




</LinearLayout>
